generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AppRole {
  user
  coach
}

enum AnalysisJobStatus {
  queued
  running
  completed
  failed
}

model User {
  id          String   @id @default(cuid())
  supabaseSub String   @unique @map("supabase_sub")
  email       String?
  role        AppRole  @default(user)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  games       Game[]
  analysisJobs AnalysisJob[]

  @@map("users")
}

model Game {
  id               String        @id @default(cuid())
  userId           String        @map("user_id")
  provider         String        @default("chess_com")
  gameUrl          String        @map("game_url")
  chessComUsername String        @map("chess_com_username")
  period           String
  pgn              String?
  endTime          DateTime?     @map("end_time")
  timeClass        String?       @map("time_class")
  rated            Boolean       @default(false)
  rules            String?
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")
  analysisJobs     AnalysisJob[]
  moveEvaluations  AnalysisMoveEvaluation[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameUrl])
  @@index([userId, createdAt])
  @@map("games")
}

model AnalysisJob {
  id              String            @id @default(cuid())
  userId          String            @map("user_id")
  gameId          String            @map("game_id")
  status          AnalysisJobStatus @default(queued)
  queueJobId      String            @unique @map("queue_job_id")
  attemptCount    Int               @default(0) @map("attempt_count")
  progressPercent Int               @default(0) @map("progress_percent")
  etaSeconds      Int?              @map("eta_seconds")
  startedAt       DateTime?         @map("started_at")
  completedAt     DateTime?         @map("completed_at")
  errorCode       String?           @map("error_code")
  errorMessage    String?           @map("error_message")
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  moveEvaluations AnalysisMoveEvaluation[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId, status, createdAt])
  @@index([gameId, createdAt])
  @@map("analysis_jobs")
}

model AnalysisMoveEvaluation {
  id               String   @id @default(cuid())
  analysisJobId    String   @map("analysis_job_id")
  gameId           String   @map("game_id")
  plyIndex         Int      @map("ply_index")
  fen              String
  playedMoveUci    String   @map("played_move_uci")
  bestMoveUci      String?  @map("best_move_uci")
  scoreCp          Int?     @map("score_cp")
  scoreMateIn      Int?     @map("score_mate_in")
  searchedDepth    Int?     @map("searched_depth")
  createdAt        DateTime @default(now()) @map("created_at")

  analysisJob AnalysisJob @relation(fields: [analysisJobId], references: [id], onDelete: Cascade)
  game       Game        @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([analysisJobId, plyIndex])
  @@index([gameId, plyIndex])
  @@map("analysis_move_evaluations")
}

model AuditLog {
  id               String   @id @default(cuid())
  actorUserId      String?  @map("actor_user_id")
  actorSupabaseSub String?  @map("actor_supabase_sub")
  action           String
  traceId          String   @map("trace_id")
  metadata         Json?
  createdAt        DateTime @default(now()) @map("created_at")

  @@index([actorUserId, createdAt])
  @@index([traceId])
  @@map("audit_logs")
}
