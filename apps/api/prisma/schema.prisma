generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AppRole {
  user
  coach
}

model User {
  id          String   @id @default(cuid())
  supabaseSub String   @unique @map("supabase_sub")
  email       String?
  role        AppRole  @default(user)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  games       Game[]

  @@map("users")
}

model Game {
  id               String   @id @default(cuid())
  userId           String   @map("user_id")
  provider         String   @default("chess_com")
  gameUrl          String   @map("game_url")
  chessComUsername String   @map("chess_com_username")
  period           String
  pgn              String?
  endTime          DateTime? @map("end_time")
  timeClass        String?   @map("time_class")
  rated            Boolean   @default(false)
  rules            String?
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameUrl])
  @@index([userId, createdAt])
  @@map("games")
}

model AuditLog {
  id               String   @id @default(cuid())
  actorUserId      String?  @map("actor_user_id")
  actorSupabaseSub String?  @map("actor_supabase_sub")
  action           String
  traceId          String   @map("trace_id")
  metadata         Json?
  createdAt        DateTime @default(now()) @map("created_at")

  @@index([actorUserId, createdAt])
  @@index([traceId])
  @@map("audit_logs")
}
