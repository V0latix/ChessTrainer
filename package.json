{
  "name": "chesstrainer",
  "private": true,
  "version": "0.1.0",
  "description": "ChessTrainer monorepo",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "security:check": "node scripts/security-baseline-check.mjs",
    "perf:web": "node scripts/perf-web-shell-check.mjs",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build && npm run security:check && npm run perf:web"
  }
}
